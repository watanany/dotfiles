{
  "coc.preferences.formatOnSaveFiletypes": ["haskell"],
  "python.jediEnabled": false,
  "languageserver": {
    "haskell": {
      "command": "hie-wrapper",
      "rootPatterns": [
        ".stack.yaml",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlint": true
        }
      }
    }
  }
}
